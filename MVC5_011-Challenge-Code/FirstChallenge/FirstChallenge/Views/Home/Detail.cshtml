@model FirstChallenge.Models.ComicBook

@{
    ViewBag.Title = "Details";
}

<h2>Details About @Model.ComicTitle #@Model.EpisodeNumber</h2>
<h3>Episode Title: @Model.EpisodeTitle</h3>
<p>
    <b>Starring: </b>
    @{
        <span> @string.Join(",", @Model.Characters.Select(x => x.Name)) </span>
    }
</p>
<hr/>
<p>@Html.ActionLink("Back to All Comics","Index")</p>

